{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="wrap" id="movie_line">
<p id="lib">Les derniers ajouts :</p>
    {% for movie in movies %}
            <div class="movie_card">
            {{ movie.affiche }}
                <a href="{{ path('movie_show_front', {'id': movie.id}) }}"><img class="movie_poster" src="{{ asset('/uploads/affiches/'~ movie.affiche )| imagine_filter('test') }} "></a>
                <div class="movie_info">
                    <p class="movie_title">{{ movie.title|title }}</p>
                    <p class="movie_date">{{ movie.releaseDate ? movie.releaseDate|date('Y') : '' }}</p>
                </div>
            </div>
    {% endfor %}
    <div class="clear"></div>
</div>




<div id="view_more"><a href="">ViewMore <i class="far fa-arrow-alt-circle-down"></a></i></div>

{% endblock %}