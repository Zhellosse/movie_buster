{% extends 'formulaire.html.twig' %}

{% block title %}Page D'inscription{% endblock %}

{% block body %}

<p>Si vous n'avez pas encore de compte, <button onclick="show()">Cliquez ici</button></p>

        <form id="register">
            <div class="form-row">
                <div class="form-group col-md-3 offset-3">
                    <label for="name">Nom : </label>
                    <input type="text" class="form-control" id="nom" placeholder="Votre nom">
                </div>
                <div class="form-group col-md-3">
                    <label for="prenom">Prénom : </label>
                    <input type="prenom" class="form-control" id="prenom" placeholder="Votre prénom">
                </div>
            </div>
            <br>

            <div class="form-row">
                <div class="form-group col-md-3 offset-3">
                    <label for="email">Email : </label>
                    <input type="email" class="form-control" id="email" placeholder="Votre email">
                </div>
                <div class="form-group col-md-3">
                    <label for="password">Mot de passe : </label>
                    <input type="password" class="form-control" id="password" placeholder="Votre Mot de passe">
                </div>
            </div>
            <br>
            <div class="form-row">
                <div class="form-group col-md-3 offset-3">
                    <label for="pseudo">Pseudo : </label>
                    <input type="text" class="form-control" id="pseudo" placeholder="Votre pseudo">
                </div>
            <br>
            </div>


        <button type="submit" class="btn">Envoyer</button> <br> <br>
        </form>
{% endblock %}
