                    <li class="linav"><a href="{{ path('user_profil') }}"><i class="far fa-address-card "> Profil</i></a></li>
                    <li class="linav"><a href="{{ path('app_logout') }}"><i class="fas fa-walking "> Deconnexion</i></a></li>

                    {% if is_granted('ROLE_ADMIN') %}

                        <!--<li class="linav"><a href="{{ path('movie_new') }}">Nouvelle fiche de film</a></li>-->
                        <li class="linav"><a href="{{ path('admin') }}"><i class="fas fa-tools "> Admin</i></a></li>

                    {% endif %}
                {% else %}
                  <li class="linav"><a href="{{ path('app_register') }}"><i class="fas fa-user-plus "> Inscription</i></a></li>
