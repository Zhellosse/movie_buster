            <div class="foot">
                <div class="logo2" id="logofoot"> 
                   <a href="{{ path('home')}}"> M<img src="{{asset('asset/img/popcornlogo.png')}}" id="popcorn" alt="logo">VIE BUSTER </a><br>
                   <i class="fab fa-twitter " id="twitter" ></i>
                    <a href ="https://www.facebook.com/Movie-Buster-397536957507337/"><i class="fab fa-facebook-f " id="fb" ></i></a>
                    
                </div>
                    <div id="lienfoot">
